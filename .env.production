# MCP Server Production Configuration
# Environment-specific settings for production deployment

# Application Configuration
APP_NAME=hello-mcp
APP_VERSION=1.0.0
SPRING_PROFILES_ACTIVE=prod

# Server Configuration
SERVER_PORT=8080
MANAGEMENT_PORT=9090
CONTEXT_PATH=/mcp

# JVM Configuration
JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication

# Database Configuration (if needed later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mcp_server
# DB_USERNAME=mcp_user
# DB_PASSWORD=secure_password

# Security Configuration
MCP_SERVER_SECRET_KEY=your-production-secret-key-here
SSL_ENABLED=true
SSL_KEY_STORE_PATH=/opt/mcp-server/ssl/keystore.p12
SSL_KEY_STORE_PASSWORD=secure_keystore_password

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_EXPORT_INTERVAL=30s

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/opt/mcp-server/logs/application.log
LOG_MAX_FILE_SIZE=100MB
LOG_TOTAL_SIZE_CAP=1GB

# External Services (for future integrations)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# ELASTICSEARCH_URL=http://localhost:9200

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_MAX_AGE=3600

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
